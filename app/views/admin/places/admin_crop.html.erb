
<%= javascript_include_tag "jquery" %>
<%= javascript_include_tag "jquery_ujs" %>
<%= javascript_include_tag "jquery.Jcrop" %>
<%= javascript_include_tag "places" %>

<%= stylesheet_link_tag "jquery.Jcrop" %>


<h1>Crop Photo</h1>
<%= image_tag @place.photo_url(:large), id: "cropbox" %>

<h4>Preview</h4>
<div style="width:358px; height:168px; overflow:hidden;">
  <%= image_tag @place.photo_url(:large), :id => "preview" %>
</div>

<%= semantic_form_for [:admin, @place] do |f| %>
  <div class="actions">
    <% %w[x y w h].each do |attribute| %>
      <%= f.hidden_field "crop_#{attribute}"%>
    <% end %>
    <%= f.submit "Crop" %>
  </div>
<% end %>